<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.gupt.community.mapper.RecommendMapper">
    <resultMap id="BaseResultMap" type="Recommend">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="uid" property="uid" jdbcType="INTEGER"/>
        <result column="time" property="time" jdbcType="TIMESTAMP"/>
    </resultMap>
    <resultMap id="ResultMapWithBLOBs" type="Recommend" extends="BaseResultMap">
        <result column="content" property="content" jdbcType="LONGVARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, uid, time
    </sql>
    <sql id="Blob_Column_List">
        content
    </sql>
    <!--查询反馈记录-->
    <select id="findAllRecommend" resultType="Recommend" resultMap="ResultMapWithBLOBs">
        select *
        from tbl_recommend
        order by id desc
    </select>
    <!--添加反馈记录-->
    <insert id="insert" parameterType="Recommend" useGeneratedKeys="true">
        insert into tbl_recommend (uid, time, content)
        values (#{uid,jdbcType=INTEGER}, #{time,jdbcType=TIMESTAMP},
                #{content,jdbcType=LONGVARCHAR})
    </insert>


</mapper>