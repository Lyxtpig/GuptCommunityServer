<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.gupt.community.mapper.CommentMapper">
    <resultMap id="BaseResultMap" type="Comment">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="uid" property="uid" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="TINYINT"/>
        <result column="article_id" property="articleId" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="content" property="content" jdbcType="LONGVARCHAR"/>
    </resultMap>
    <resultMap id="CommentUnionStudent" type="net.gupt.community.vo.CommentVo" extends="BaseResultMap">
        <result column="nickName" property="student.nickName"/>
        <result column="avatarUrl" property="student.avatarUrl"/>
    </resultMap>
    <select id="findCommentsByArticleId" resultType="comment" resultMap="CommentUnionStudent">
        select tbl_comment.*,tbl_student.nickName,tbl_student.avatarUrl
        from tbl_comment LEFT outer join tbl_student  on tbl_comment.uid = tbl_student.uid
        where article_id = #{articleId}
          and type = #{type} order by id desc
    </select>
    <delete id="deleteByArticleId" parameterType="java.lang.Integer">
        delete
        from tbl_comment
        where article_id = #{articleId}
          AND type = #{articleType}
    </delete>
    <delete id="deleteByPrimaryId" parameterType="java.lang.Integer">
        delete
        from tbl_comment
        where id = #{id}
    </delete>
    <insert id="insertByComment" parameterType="Comment">
        insert into tbl_comment (uid, type,
                                 article_id, create_time, content)
        values (#{uid,jdbcType=INTEGER}, #{type,jdbcType=TINYINT},
                #{articleId,jdbcType=INTEGER}, #{createTime,jdbcType=TIMESTAMP}, #{content,jdbcType=LONGVARCHAR})
    </insert>

</mapper>